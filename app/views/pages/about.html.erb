<div class="app-card-container">
  <div class="card">
 
    <h1>Without Me</h1>
  <div class="row">
      <div class="col-md-4">
         <%= image_tag "profile.jpeg" , width: 300 , alt: "profile image", class: 'profile-img'%>
      <div class="skills">
        <% @skills.each do |skill| %>
        <div class="skill">
          <h4> <%= skill.title%> </h4>
          <div class="progress">
            <div class="progress-bar progress-bar-striped bg-primary"
              role="progressbar"
              aria-valuenow="<%= skill.percent_utilized %>"
              aria-valuemax="100"
              style="width: <%= skill.percent_utilized %>%"
              >
              
            </div>
          </div>
        </div>
        <%end%>
        
      </div>
      
      </div>
      <div class="col-md-8">
        <p>Now this looks like a job for me so everybody just follow me
          'Cause we need a little controversy,
          'Cause it feels so empty without me
          
        </p>
        
        <p>
          <button 
            class="btn btn-warning"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controler=:"jobHistory"
          >
            Job History
          </button>
        </p>
        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Job 1
            </div>
            <div class= "card card-block">
            Job 2
            </div>
          </div>
          
        </p>

  
  
    
    
          <button 
            class="btn btn-warning"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controler=:"education"
          >
            Education
          </button>
        </p>
        <p>
          <div class="collapse" id="education">
            <div class="card card-block">
              Altara Elementary/Cresecent Elementary K-6th
            </div>
            <div class= "card card-block">
            Mount Jordan Middle School 7-8th
            </div>
              <div class= "card card-block">
            Jordan High School 9th-12t
            </div>
          </div>
          
        </p>

    
  </div>
  
</div>

