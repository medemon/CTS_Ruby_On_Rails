    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    

<%=render 'shared/blog_nav'%>

       
       
<%= render 'shared/blog_masthead'%>

        
      <div class="container">

      <div class="row">
     
      
           
                  
      <%= yield %>
          
 
     <%=render 'shared/blog_sidebar'%>
     </div>
          <!-- start of footer -->
     <%=render 'shared/blog_footer'%>
          
          <!--end of footer-->
          <%= alerts %>

     
   </div>
  </body>
</html>
